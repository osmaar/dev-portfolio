import Tailwind from "@/icons/tailwind.astro";
import { skills } from "@cv";
import Swift from "@/icons/swift.astro";
import SwiftUI from "@/icons/swiftui.astro";
import Kotlin from "@/icons/kotlin.astro";
import Flutter from "@/icons/flutter.astro";
import Figma from "@/icons/Figma.astro";
import Gitlab from "@/icons/Gitlab.astro";
import Php from "@/icons/Php.astro";
import Laravel from "@/icons/Laravel.astro";
import CodeIgnaiter from "@/icons/CodeIgniter.astro";
import Livewire from "@/icons/Livewire.astro";
import Angular from "@/icons/Angular.astro";
import Vuejs from "@/icons/Vuejs.astro";
import Jest from "@/icons/Jest.astro";
import Jquery from "@/icons/Jquery.astro";
import Ionic from "@/icons/Ionic.astro";
import AstroJs from "@/icons/AstroJs.astro";
import Java from "@/icons/Java.astro";
import CSharp from "@/icons/CSha.astro";
import NET from "@/icons/Net.astro";
import Bootstrap from "@/icons/Bootstrap.astro";
import SpringBoot from "@/icons/SpringBoot.astro";
import Python from "@/icons/Python.astro";
import PostgreSQL from "@/icons/PostgresSQL.astro";
import Linux from "@/icons/Linux.astro";
import Adobe from "@/icons/Adobe.astro";
import Docker from "@/icons/Docker.astro";
import SonarQube from "@/icons/SonarQube.astro";

const SKILLS_ICONS: Record<string, any> = {
  HTML,
  CSS,
  JavaScript,
  TypeScript,
  MySQL,
  Git,
  GitHub,
  Tailwind,
  Swift,
  SwiftUI,
  Kotlin,
  Flutter,
  Figma,
  Gitlab,
  Php,
  Laravel,
  CodeIgnaiter,
  Livewire,
  Angular,
  Vuejs,
  Jest,
  Jquery,
  Ionic,
  AstroJs,
  Java,
  CSharp,
  NET,
  SpringBoot,
  Python,
  Bootstrap,
  PostgreSQL,
  Linux,
  Docker,
  SonarQube,
  Adobe,
};
---

<Section className={Astro.props.className} title="Herramientas y TecnologÃ­as">
  <ul
    class="inline-flex flex-wrap gap-6 [&>li>svg]:size-5 [&>li>svg]:text-skin-hue [&>li]:text-sm"
  >
    {
      skills.map(({ name }) => {
        const iconName = name === "Next.js" ? "Next" : name;
        const Icon = SKILLS_ICONS[iconName];

        return (
          <li class="border-skin-hue/20s bg-skin-button-accent/20s borders border-solids flex items-center gap-1 rounded-md px-2 py-0.5 text-xs text-skin-muted print:border-none print:bg-transparent print:p-0 print:text-zinc-800">
            {Icon && <Icon />} <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>
